  "devDependencies": {
    "babel-core": "6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "1.5.2",
    "browser-sync": "^2.18.12",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "0.11.2",
    "webpack": "3.0.0"
  },
  "dependencies": {
    "expose-loader": "^0.7.3",
    "phaser-ce": "2.8.0"
  }
}
